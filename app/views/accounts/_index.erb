<table class="table table-striped table-hover" id="sample-table-1">
	<thead>
		<tr>
			<th class="hidden-480">
				用户ID
			</th>
			<th>姓名</th>
			<th>是否在职？</th>
			<th class="hidden-480">绑定的手机号</th>
			<th>是否锁定？</th>
			<th class="hidden-480">
				<i class="ace-icon fa fa-clock-o bigger-110 hidden-480"></i>
				最后登陆时间
			</th>
			<th class="hidden-480">用户组</th>
			<th>用户管理</th>
		</tr>
	</thead>
<tbody>
<% users.each do |user|%>
<tr>
	<td class="hidden-480">
		<%=user.id%>
	</td>
	<td>
		<a href="#"><%=user.username%></a>
	</td>
	<td><%=_job_status user.injob%></td>
	<td class="hidden-480"><%=user.phone%></td>
	<td><%=_locked? user.enabled,account_url(user.id),'delete'%></td>

	<td class="hidden-480">
		<%=user.last_login_at.to_s(:detail) if user.last_login_at%>
	</td>
	<td  class="hidden-480"><%=user.group.name%></td>
	<td><a title="" href="<%=roles_account_url(user.id)%>" data-placement="left" data-rel="tooltip" class="btn btn-info btn-xs tooltip-info" data-original-title="用户角色"><i class="ace-icon fa fa-users bigger-120"></i></a>
<a title="" href="<%=delete_account_url(user.id)%>" data-placement="bottom" data-rel="tooltip" class="btn btn-danger btn-xs tooltip-danger" data-method="delete" data-confirm="确认删除用户？删除用户可能造成数据错误。" data-remote='true' rel="nofollow" data-original-title="删除用户"><i class="ace-icon fa fa-trash-o bigger-120"></i></a>
	</td>
</tr>
<% end %>								
	</tbody>
</table>