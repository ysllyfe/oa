<div class="page-header">
	<h1>
		系统管理
		<small>
			<i class="ace-icon fa fa-angle-double-right"></i>
			用户管理
		</small>
	</h1>
</div>
<table class="table table-striped table-hover" id="sample-table-1">
	<thead>
		<tr>
			<th class="hidden-480">
				用户ID
			</th>
			<th>姓名</th>
			<th>是否在职？</th>
			<th class="hidden-480">绑定的手机号</th>
			<th>是否锁定？</th>
			<th>
				<i class="ace-icon fa fa-clock-o bigger-110 hidden-480"></i>
				最后登陆时间
			</th>
			<th class="hidden-480">用户组</th>
			<th>操作</th>
		</tr>
	</thead>

<tbody>
<% @users.each do |user| %>
<tr>
	<td class="hidden-480">
		<%=user.id%>
	</td>

	<td>
		<a href="#"><%=user.username%></a>
	</td>
	<td><%=_true_or_false user.injob%></td>
	<td class="hidden-480"><%=user.phone%></td>
	<td><%=_locked? user.enabled,account_url(user.id),'delete'%></td>

	<td class="hidden-480">
		<%=user.last_login_at.to_s(:detail) if user.last_login_at%>
	</td>
	<td  class="hidden-480"><%=user.group.name%></td>

	<td>
		<a href="<%=rolegroups_account_url(user.id)%>">用户角色</a>  <a href="">修改用户</a>
	</td>
</tr>
<% end %>								
	</tbody>
</table>

<%= paginate @users %>