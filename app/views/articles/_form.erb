<%=form_for @article,:html=>{:class=>"form-horizontal"} do |f|%>
<div class="form-group">
	<label for="form-field-1" class="col-sm-2 control-label no-padding-right"> 制度标题 </label>

	<div class="col-sm-10">
		<%=f.text_field :title,:class=>'col-xs-10 col-sm-5',:placeholder=>'公司制度标题'%>
	</div>
</div>

<div class="form-group">
	<label for="form-field-1-1" class="col-sm-2 control-label no-padding-right"> 文件编号 </label>

	<div class="col-sm-10">
		<%=f.text_field :code,:class=>'col-xs-10 col-sm-5',:placeholder=>'文件编号'%>
	</div>
</div>

<div class="form-group">
	<label for="form-field-1-1" class="col-sm-2 control-label no-padding-right"> 生效日期 </label>

	<div class="col-sm-10">
		<%=f.text_field :dateline,:class=>'col-xs-10 col-sm-2 date-picker','data-date-format'=>'yyyy-mm-dd'%>
	</div>
</div>


<div class="form-group">
	<label for="form-field-1-1" class="col-sm-2 control-label no-padding-right"> 文件标签 </label>

	<div class="col-sm-10">
		<%=f.text_field :tags,:class=>'col-xs-10 col-sm-5',:placeholder=>'文件标签'%>
	</div>
</div>


<div class="form-group">
	<label for="form-field-1-1" class="col-sm-2 control-label no-padding-right"> 文件分发 </label>

	<div class="col-sm-10">
	<%=f.select :group_id,@groups.collect{|t| [t.name,t.id]},{:include_blank=>true},{:class=>'chosen-select',:multiple=>'',:placeholder=>'请选择文件下发公司',:style=>'width:90%'}%>
	</div>
</div>


<div class="form-group">
	<label for="form-field-1-1" class="col-sm-2 control-label no-padding-right"> 文件内容 </label>

	<div class="col-sm-10">
		<script id="editor" type="text/plain"><%=raw @article.content%></script>
	</div>
</div>


<div class="clearfix form-actions">
	<div class="col-md-offset-3 col-md-9">
		<button type="submit" class="btn btn-info">
			<i class="ace-icon fa fa-check bigger-110"></i>
			提交
		</button>
	</div>
</div>
<% end %>