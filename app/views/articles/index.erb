<div class="page-header">
	<h1>
		公司制度
		<small>
			<i class="ace-icon fa fa-angle-double-right"></i>
			全部制度
		</small>
	</h1>
</div>
<% if @logged_in_user.has_role?('like article_')%>
<a class="btn btn-primary" href="<%=new_article_url%>">
	<i class="ace-icon fa fa-pencil align-top bigger-125"></i>
	添加新制度
</a>
<% end %>
<table class="table table-striped table-hover" id="sample-table-1">
<thead>
	<tr>
		<th>制度名称</th>
		<th class="hidden-480">分发</th>
		<th class="hidden-480">文件编号</th>

		<th class="hidden-480"><i class="ace-icon fa fa-clock-o bigger-110"></i>生效时间</th>
		<th class="hidden-480">
			文件标签
		</th>
		<th>操作</th>
	</tr>
</thead>
<tbody>
<%@articles.each do |art|%>
<tr>
	<td><i class="fa fa-file-text-o "></i> <a href="<%=article_url(art.hash_id)%>"><%=art.title%></a></td>
	<td class="hidden-480"><%=art.group_name%></td>
	<td class="hidden-480"><%=art.code%></td>
	<td class="hidden-480"><%=art.dateline%></td>
	<td class="hidden-480"><%=art.tags%></td>
	<td>
<% if art.is_checked == 1 %>
<a class="btn btn-xs btn-warning" data-method="put" data-confirm="取消审核？" rel="nofollow" href="<%=check_article_url(art.hash_id)%>">
取消审核
</a>
<% else %>
<a class="btn btn-xs btn-success" data-method="put" data-confirm="审核通过？" rel="nofollow" href="<%=check_article_url(art.hash_id)%>">
通过审核
</a>
<% end %>
<a href="<%=edit_article_url(art.hash_id)%>" class="btn btn-xs btn-info">
<i class="ace-icon fa fa-pencil bigger-120"></i>
</a>
<a class="btn btn-xs btn-danger" href="<%=article_url(art.hash_id)%>" data-method="delete" data-confirm="确认删除？" rel="nofollow">
<i class="ace-icon fa fa-trash-o bigger-120"></i>
</a>

	</td>
</tr>
<% end %>
</tbody>
</table>
