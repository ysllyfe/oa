<div class="col-xs-12 col-sm-6">
<div class="widget-box">
	<div class="widget-header widget-header-flat">
		<h4 class="widget-title smaller"><%=truck.s1 + '-' + truck.s2 + '-' + truck.s3%></h4>
		<div class="widget-toolbar">
			<a href="<%=edit_project_truck_url(truck)%>"><i class="ace-icon fa fa-edit"></i></a>
			<a href="<%=project_truck_url(truck)%>" rel="nofollow" data-confirm="确认删除？" data-method="delete"><i class="ace-icon fa fa-trash-o"></i></a>
		</div>
	</div>

	<div class="widget-body">
		<div class="widget-main">
			<code class="pull-right"><%=_original_sum(truck)%></code>
<table class="table table-striped table-hover">
	<%=_simple_thead(t("trucks.original_table"))%>
	<tbody>
<%truck.costs.each do |cost|%>
<tr>
	<td><%=cost.factory.name%></td>
	<td><%=cost.steeltype.name%></td>
	<td><%=cost.format%></td>
	<td><%=cost.weight%><%=cost.weight_unit%></td>
	<td><%=cost.price%></td>
	<td class="hidden-480">
		<span class="label label-warning"><%=_round(cost.price.to_f*cost.weight.to_f)%></span>
	</td>
</tr>
<% end %>
	</tbody>
</table>
		</div>
	</div>
</div>
</div>