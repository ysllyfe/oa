<div class="page-header">
	<h1>
		<%=t("sidebar.menu.project")%>
		<small>
			<i class="ace-icon fa fa-angle-double-right"></i>
			<%=t("sidebar.project.my")%>
		</small>
	</h1>
</div>



<div class="row">
<div class="col-xs-12">
<h4>
<i class="ace-icon fa fa-hand-o-right icon-animated-hand-pointer blue"></i>
<a class="green" href="<%=new_project_income_url%>"> <%=t("income.add")%> </a>
</h4>
</div>
</div>



<table class="table table-striped table-bordered table-hover" id="sample-table-1">
<%=_simple_thead(t("income.table"))%>
	<tbody>
<% @incomes.each do |f|%>
<tr>
	<td class="hidden-480"><%=f.id%></td>
	<td><%=f.time.to_s(:friendly)%></td>
	<td><%=f.item.name if f.item%></td>
	<td class="hidden-480"><%=_delvery_user(f.users)%></td>

	<td>
		<%=_income_status(f)%>
	</td>

	<td>
		<div class="hidden-sm hidden-xs btn-group">
			<a class="btn btn-xs btn-info" href="<%=edit_project_income_url(f)%>">
				<i class="ace-icon fa fa-pencil bigger-120"></i>
			</a>

			<a class="btn btn-xs btn-danger" href="<%=project_income_url(f)%>" data-method="delete" data-remote="true" data-confirm="确认删除？" rel="nofollow">
				<i class="ace-icon fa fa-trash-o bigger-120"></i>
			</a>

		</div>

		<div class="hidden-md hidden-lg">
			<div class="inline position-relative">
				<button data-position="auto" data-toggle="dropdown" class="btn btn-minier btn-primary dropdown-toggle">
					<i class="ace-icon fa fa-cog icon-only bigger-110"></i>
				</button>

				<ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">

					<li>
						<a title="" data-rel="tooltip" class="tooltip-success" href="<%=edit_project_income_url(f)%>" data-original-title="Edit">
							<span class="green">
								<i class="ace-icon fa fa-pencil-square-o bigger-120"></i>
							</span>
						</a>
					</li>

					<li>
						<a title="" data-method="delete" data-confirm="确认删除？" rel="nofollow" data-rel="tooltip" class="tooltip-error" data-remote='true' href="<%=project_income_url(f)%>" data-original-title="Delete">
							<span class="red">
								<i class="ace-icon fa fa-trash-o bigger-120"></i>
							</span>
						</a>
					</li>
				</ul>
			</div>
		</div>
	</td>
</tr>
<% end %>
	</tbody>
</table>