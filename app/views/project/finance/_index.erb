<div class="widget-box transparent">
	<div class="widget-header widget-header-flat">
		<h4 class="widget-title lighter">
			<i class="ace-icon fa fa-university orange"></i>
			未结款项目
		</h4>

		<div class="widget-toolbar">
			<a data-action="collapse" href="#">
				<i class="ace-icon fa fa-chevron-up"></i>
			</a>
		</div>
	</div>

	<div class="widget-body">
		<div class="widget-main no-padding">

			
<div class="alert alert-danger" style="margin-bottom:0">
	<button data-dismiss="alert" class="close" type="button">
		<i class="ace-icon fa fa-times"></i>
	</button>

	未结款工程项目共有未付款 <span class="tobepay">...</span> 元 
	<br>
</div>
			<table class="table table-bordered table-striped">
<%=_simple_thead(t("item.finance.search_table"))%>
				<tbody>
<% remind = 0.0 %>
<% @items.each do |t|
if t.ended == 1
	next
else
	remind += _remind_payment(t)
end
 %>
<tr>
<td><a href="<%=project_finance_index_url(:id=>t.id)%>"><%=t.id%></a></td>
<td><%=_tip_item t,search_project_finance_index_url(:item_id=>t.id)%><%=_item_status(t)%></td>
<td><%=t.weight%></td>
<td align="right">
<%= yuan t.price%>
</td>
<td align="right"><%= yuan t.payments%></td>
<td align="right"><%= yuan t.operate_payments%></td>
<td align="right">
<%= yuan _remind_payment(t)%>
</td>
</tr>
<% end %>
					
				</tbody>
			</table>
		</div><!-- /.widget-main -->
	</div><!-- /.widget-body -->
</div><!-- /.widget-box -->

<div id="tobepay" style="display:none"><%=yuan remind%></div>