<%= form_for :sell,:url=>project_costs_url(:income=>@income.id) do |f|%>
<table class="table table-striped table-bordered table-hover" id="sample-table-1">
	<thead>
		<tr>

			<th>型号</th>
			<th>规格</th>
			<th class="hidden-480">厂家</th>
			<th>进货重量</th>
			<th class="hidden-480">进货价格</th>
			<th class="hidden-480">进货成本</th>
			<th>销售数量</th>
			<th>销售价格(元)</th>
			<th class="hidden-480">销售小计(元)</th>
		</tr>
	</thead>

	<tbody>
<% @sells.each do |t| %>
<tr>
<td><%=@steeltypes.find(t.steeltype_id).name%></td>
<td><%=t.format%></td>
<td class="hidden-480"><%=@factories.find(t.factory_id).name%></td>
<td><%=_round(t.weight)%><%=t.weight_unit%></td>
<td class="hidden-480"><%=_round(t.price)%></td>
<td class="hidden-480"><%=_round(t.price.to_f * t.weight.to_f)%></td>
<td><input type="text" size="5" class="input-small" name="sell_weight[<%=t.id%>]" value="<%=t.sell_weight%>" /><%=t.weight_unit%></td>
<td><input type="text" size="5" class="input-small" name="sell_price[<%=t.id%>]" value="<%=t.sell_price%>" /></td>
<td class="hidden-480"><%= t.sell_weight.to_f * t.sell_price.to_f %></td>
</tr>
<% end %>
	</tbody>
</table>

<div class="clearfix form-actions">
	<div class="col-md-offset-3 col-md-9">
		<a class="btn">
			<i class="ace-icon fa fa-undo bigger-110"></i>
			返回上一步
		</a>

		&nbsp; &nbsp; &nbsp;
		<button type="submit" class="btn btn-info">
			<i class="ace-icon fa fa-check bigger-110"></i>
			提交，并进入下一步
		</button>		
	</div>
</div>
<% end %>