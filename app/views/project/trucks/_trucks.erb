<div class="widget-box">
	<!-- #section:custom/widget-box.options -->
	<div class="widget-header">
		<h5 class="widget-title bigger lighter">
			<i class="ace-icon fa fa-table"></i>
			已添加车辆
		</h5>

		
	</div>

	<!-- /section:custom/widget-box.options -->
	<div class="widget-body">
		<div class="widget-main no-padding">
			<table class="table table-striped table-bordered table-hover">
				<thead class="thin-border-bottom">
					<tr>
						<th class="hidden-480">
							序号
						</th>

						<th>
							<%=t("trucks.pai")%>
						</th>
						<th>操作</th>
					</tr>
				</thead>

				<tbody>
<% @trucks.each_with_index do |t,index| %>
<tr>
<td class="hidden-480"><%=index+1%></td>

<td>
<%=t.s1 + '-' + t.s2 + '-' + t.s3%>
</td>

<td>
<a href="<%=edit_project_truck_url(t.id)%>" class="btn btn-xs btn-info"><i class="ace-icon fa fa-pencil bigger-120"></i></a>
<a href="<%=project_truck_url(t.id)%>" class="btn btn-xs btn-danger" data-method="delete" data-confirm="确认删除？" rel="nofollow"><i class="ace-icon fa fa-trash-o bigger-120"></i></a>
</td>
</tr>
<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>