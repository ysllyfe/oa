<% 
if @cost
	@steeltype = @steeltypes.find(@cost.steeltype_id) 
	@factory  = @factories.find(@cost.factory_id)
end
%>
<div class="well col-xs-12 _type">
<div class="col-sm-4">
<div class="row">
	<div class="col-xs-12">
		<label class="col-xs-3"><%=t("trucks.steeltype")%></label>
		<div class="col-xs-9">
		<input type="hidden" name="type[]" value="<%=@steeltype.id if @steeltype%>"><span><%=@steeltype.name if @steeltype%></span><a rel="steeltypeBox" class="steeltype_choose" href="###"><%=t('choose')%></a>
		</div>
	</div>
	<div class="col-xs-12">
		<label class="col-xs-3"><%=t("trucks.format")%></label>
		<input type="text"  class="col-xs-9" value="<%= @cost.format if @cost%>" name="fformat[]" />
	</div>
</div>
</div>
<div class="col-sm-4">
<div class="row">
	<div class="col-xs-12">
		<label class="col-xs-3"><%=t("trucks.factory")%></label>
		<div class="col-xs-9">
		<input type="hidden" name="factory[]" value="<%=@factory.id if @factory%>"><span><%=@factory.name if @factory%></span><a rel="factoryBox" class="factory_choose" href="###"><%=t('choose')%></a>
		</div>
	</div>
	<div class="col-xs-12">
		<label class="col-xs-3"><%=t("trucks.weight")%></label>
		<div class="col-xs-9">
		<input type="text" class="input-small weight" name="weight[]" value="<%= @cost.weight if @cost%>">
		<select name="weight_unit[]">
		<option value="吨" <%= @cost.weight_unit == "吨" ? "selected=selected" : '' if @cost %>>吨</option>
		<option value="根" <%= @cost.weight_unit == "根" ? "selected=selected" : '' if @cost %>>根</option>
		<option value="支" <%= @cost.weight_unit == "支" ? "selected=selected" : '' if @cost %>>支</option></select> 
		</div> 
	</div>
</div>
</div>
<div class="col-sm-4">
<div class="row">
	<div class="col-xs-12">
	<label class="col-xs-3"><%=t("delete")%></label>
	<a href="###" class="_del">x</a>
	</div>
	<div class="col-xs-12">
	<label class="col-xs-3"><%=t("trucks.price")%></label>
	<input type="text" value="<%= @cost.price if @cost%>" class="col-xs-9" name="price[]" />
	</div>
</div>
</div>
</div>