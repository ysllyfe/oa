<div class="page-header">
	<h1>
		短信平台
		<small>
			<i class="ace-icon fa fa-angle-double-right"></i>
			短信列表
		</small>
	</h1>
</div>
<a class="btn btn-primary" href="<%=new_sm_url%>">
<i class="ace-icon fa fa-pencil align-top bigger-125"></i>
添加新短信
</a>
<hr />
<table class="table table-striped table-bordered table-hover" id="sample-table-1">
	<thead>
		<tr>
			<th class="hidden-480">
				提交用户
			</th>
			<th class="hidden-480">
				提交时间
			</th>
			<th>对象</th>
			<th>内容</th>
			<th class="hidden-480">状态</th>
			<th>
				操作
			</th>
		</tr>
	</thead>

	<tbody>
<% @sms.each do |f| %>
		<tr>
			<td class="hidden-480"><%=f.user.username%></td>
			<td class="hidden-480"><%=f.created_at.to_s(:detail)%></td>
			<td><%=_sms_obj(f)%></td>
			<td><%=f.info%></td>
			<td class="hidden-480"><%=_sms_status f.status%></td>
			<td><%=_sms_opeate f%></td>
		</tr>
<% end %>
	</tbody>
</table>

<%= paginate @sms %>