<div class="widget-box">
	<div class="widget-header">
		<h5 class="widget-title">基础信息</h5>
	</div>

	<div class="widget-body">
		<div class="widget-main">
<%=form_for @edu,:url=>staffs_ajax_edu_url(:id=>@user.id),:method=>'post',:remote=>'true' do |f|%>

<div>
<label>
学校：
</label>
<%=f.text_field :school,:class=>'input-larger'%>
</div>
<div class="space space-8"></div>
<div>
<label>
专业：
</label>
<%=f.text_field :specialty,:class=>'input-small'%>
</div>
<div class="space space-8"></div>
<div>
<label>
学历：
</label>
<%=f.text_field :degree,:class=>'input-small'%>
</div>
<div class="space space-8"></div>
<div>
<label>开始：</label>
<%=f.text_field :start_at,'data-date-format'=>'yyyy-mm-dd',:class=>'input-small date-picker'%>
</div>
<div class="space space-8"></div>
<div>
<label>结束：</label>
<%=f.text_field :end_at,'data-date-format'=>'yyyy-mm-dd',:class=>'input-small date-picker'%>
</div>
<div class="space space-8"></div>
<div>
<label>备注：</label>
<%=f.text_area :info,:class=>'form-control' %>
</div>
<div class="clearfix form-actions">
	<div class="">
		<button type="submit" class="btn btn-info btn-block">
			<i class="ace-icon fa fa-check bigger-110"></i>
			<%=t("submit")%>
		</button>

	</div>
</div>

<% end %>



		</div>
	</div>
</div>


<script src="/assets/js/date-time/bootstrap-datepicker.min.js"></script>
<script type="text/javascript">
$('.date-picker').datepicker({
	autoclose: true,
	todayHighlight: true
})
//show datepicker when clicking on the icon
.next().on(ace.click_event, function(){
	$(this).prev().focus();
});
</script>