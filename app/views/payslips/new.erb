<div class="page-header">
	<h1>
		工资管理
		<small>
			<i class="ace-icon fa fa-angle-double-right"></i>
			添加新的工资单
		</small>
	</h1>
</div>

<%=form_for @payslip , :html=>{:enctype=>'multipart/form-data',:class=>'form-horizontal'} do |f|%>

<div class="form-group">
	<label for="form-field-1" class="col-sm-3 control-label no-padding-right"> 工资单文件 </label>

	<div class="col-sm-9">
		<input type="file" class="col-xs-10 col-sm-5" name="file">
	</div>

</div>
<div class="form-group">
	<label for="form-field-1" class="col-sm-3 control-label no-padding-right"> 工资发放月份 </label>

	<div class="col-sm-9">
		<input type="text" data-date-format="yyyy-mm-dd" class="input-small date-picker" name="time">
	</div>
	
</div>

<div class="clearfix form-actions">
		<div class="col-md-offset-3 col-md-9">
			<button type="submit" class="btn btn-info">
				<i class="ace-icon fa fa-check bigger-110"></i>
				提交工资单
			</button>
		</div>
	</div>
<% end %>