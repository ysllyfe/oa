<h3 class="header smaller lighter blue">
	<%=@user.username%>
	<small>
	工资变动信息
		<a href="<%=edit_payslips_user_url(@user.id)%>">
			(重新设定<i class="ace-icon fa fa-external-link"></i>)
		</a>
	</small>
</h3>

<table class="table table-striped table-bordered table-hover">
<thead class="thin-border-bottom">
<tr>
<th>
开始时间
</th>
<th>工资</th>
<th>
构成(基本工资-绩效工资-报销额度)
</th>
<th>备注</th>
<th>管理</th>
</tr>
</thead>

<tbody>
<%@wages.each do |f|%>
<tr>
	<td><%=f.start_at%></td>
	<td><%=f.part_1 + f.part_2 + f.part_3%>元</td>
	<td><%=f.part_1%>-<%=f.part_2%>-<%=f.part_3%></td>
	<td><%=f.info%></td>
	<td><%=link_to '删除',del_payslips_users_url(:id=>f.id),:method=>'delete','data-confirm'=>'确认删除？'%> </td>
</tr>
<% end %>
</tbody>
</table>