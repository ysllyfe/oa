<h3 class="header smaller lighter blue">
	<%=@user.username%>
	<small>
	工资变动信息
	</small>
</h3>

<%=form_for @wage,:url=>payslips_user_url(@user.id),:method=>'PUT',:html=>{:class=>'form-horizontal'} do |f|%>
								<!-- #section:elements.form -->
<div class="form-group">
<label for="form-field-1" class="col-sm-3 control-label no-padding-right"> 开始时间 </label>

<div class="col-sm-2">
<input type="text" name="start_at" data-date-format="yyyy-mm-dd" class="form-control date-picker">
</div>
</div>
<div class="form-group">
<label for="form-field-1" class="col-sm-3 control-label no-padding-right"> 基本工资 </label>

<div class="col-sm-2">
<input type="text" name="part_1" class="form-control">
</div>
</div>


<div class="form-group">
<label for="form-field-1" class="col-sm-3 control-label no-padding-right"> 绩效工资 </label>

<div class="col-sm-2">
<input type="text" name="part_2" class="form-control">
</div>
</div>

<div class="form-group">
<label for="form-field-1" class="col-sm-3 control-label no-padding-right"> 报销额度 </label>

<div class="col-sm-2">
<input type="text" name="part_3" class="form-control">
</div>
</div>


<div class="form-group">
<label for="form-field-1" class="col-sm-3 control-label no-padding-right"> 备注 </label>

<div class="col-sm-2">
<textarea name="info" rows="5" cols="40"></textarea>
</div>
</div>


<div class="clearfix form-actions">
	<div class="col-md-offset-3 col-md-9">
		<button type="submit" class="btn btn-info">
			<i class="ace-icon fa fa-check bigger-110"></i>
			提交
		</button>
	</div>
</div>
<% end %>